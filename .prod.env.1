      # Production: 'https://example.com/wekan'
      ROOT_URL=''

      PORT=3333 # Defaults to 3000

      # This is used for logout redirecting and linking to symbolpedia. I.e., SYMBOLPEDIA_URL=http://localhost:5000 (no trailing slash)
      SYMBOLPEDIA_URL=

      # Location of the KeyCloak Server, with port. I.e. OAUTH2_SERVER_URL=https://... (no trailing slash)
      OAUTH2_SERVER_URL=
      OAUTH2_SECRET=

      WITH_API=true

      #---------------------------------------------
      MONGO_URL='mongodb://127.0.0.1:27017/wekan'

      #---------------------------------------------
      OAUTH2_ENABLED=true
      OAUTH2_AUTH_ENDPOINT=/realms/symbolpedia/protocol/openid-connect/auth
      OAUTH2_CLIENT_ID=account
      OAUTH2_EMAIL_MAP=email
      OAUTH2_FULLNAME_MAP=given_name
      OAUTH2_ID_MAP=preferred_username
      OAUTH2_LOGIN_STYLE=redirect
      OAUTH2_REQUEST_PERMISSIONS="openid profile email"
      OAUTH2_TOKEN_ENDPOINT=/realms/symbolpedia/protocol/openid-connect/token
      OAUTH2_USERINFO_ENDPOINT=/realms/symbolpedia/protocol/openid-connect/userinfo
      OAUTH2_USERNAME_MAP=preferred_username

      #---------------------------------------------
      # ==== AUTOLOGIN WITH OIDC/OAUTH2 ====
      # https://github.com/wekan/wekan/wiki/autologin
      OIDC_REDIRECTION_ENABLED=true

      #---------------------------------------------------------------------
      # PASSWORD_LOGIN_ENABLED : Enable or not the password login form.
      PASSWORD_LOGIN_ENABLED=false

     #---------------------------------------------------------------
      # ==== PASSWORD BRUTE FORCE PROTECTION ====
      #https://atmospherejs.com/lucasantoniassi/accounts-lockout
      #Defaults below. Uncomment to change. wekan/server/accounts-lockout.js
      ACCOUNTS_LOCKOUT_KNOWN_USERS_FAILURES_BEFORE=3
      ACCOUNTS_LOCKOUT_KNOWN_USERS_PERIOD=60
      ACCOUNTS_LOCKOUT_KNOWN_USERS_FAILURE_WINDOW=15
      ACCOUNTS_LOCKOUT_UNKNOWN_USERS_FAILURES_BERORE=3
      ACCOUNTS_LOCKOUT_UNKNOWN_USERS_LOCKOUT_PERIOD=60
      ACCOUNTS_LOCKOUT_UNKNOWN_USERS_FAILURE_WINDOW=15
      #---------------------------------------------------------------

      # ==== ACCOUNT OPTIONS ====
      # https://docs.meteor.com/api/accounts-multi.html#AccountsCommon-config
      # Defaults below. Uncomment to change. wekan/server/accounts-common.js
      ACCOUNTS_COMMON_LOGIN_EXPIRATION_IN_DAYS=1
      #---------------------------------------------------------------

      #---------------------------------------------------------------
      # ==== RICH TEXT EDITOR IN CARD COMMENTS ====
      # https://github.com/wekan/wekan/pull/2560
      RICHER_CARD_COMMENT_EDITOR=false
      #---------------------------------------------------------------
      # ==== CARD OPENED, SEND WEBHOOK MESSAGE ====
      CARD_OPENED_WEBHOOK_ENABLED=false

      # ==== BIGEVENTS DUE ETC NOTIFICATIONS =====
      # https://github.com/wekan/wekan/pull/2541
      # Introduced a system env var BIGEVENTS_PATTERN default as "NONE",
      # so any activityType matches the pattern, system will send out
      # notifications to all board members no matter they are watching
      # or tracking the board or not. Owner of the wekan server can
      # disable the feature by setting this variable to "NONE" or
      # change the pattern to any valid regex. i.e. '|' delimited
      # activityType names.
      # a) Example
      #BIGEVENTS_PATTERN=due
      # b) All
      #BIGEVENTS_PATTERN=received|start|due|end
      # c) Disabled
      BIGEVENTS_PATTERN=NONE

      #-----------------------------------------------------------------
      # Enable browser policy and allow one trusted URL that can have iframe that has Wekan embedded inside.
      # Setting this to false is not recommended, it also disables all other browser policy protections
      # and allows all iframing etc. See wekan/server/policy.js
      # Default value: true
      BROWSER_POLICY_ENABLED=true
      # When browser policy is enabled, HTML code at this Trusted URL can have iframe that embeds Wekan inside.
      # Example: TRUSTED_URL=http://example.com
      TRUSTED_URL=''
      # What to send to Outgoing Webhook, or leave out. Example, that includes all that are default: cardId,listId,oldListId,boardId,comment,user,card,commentId .
      # Example: WEBHOOKS_ATTRIBUTES=cardId,listId,oldListId,boardId,comment,user,card,commentId
      WEBHOOKS_ATTRIBUTES=''

      #---------------------------------------------------------------------
      # https://github.com/wekan/wekan/issues/3585#issuecomment-1021522132
      # Add more Node heap:
      #NODE_OPTIONS="--max_old_space_size=4096"

      WRITABLE_PATH=..
